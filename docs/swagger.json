{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "sugar_control",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "description": "Supporting documentation for working with the blood sugar monitoring backend."
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    },
    {
      "url": "https://blood-sugar-control-backend.onrender.com"
    }
  ],
  "tags": [
    {
      "name": "User",
      "description": "User registration"
    },
    {
      "name": "Measurements",
      "description": "Measuring blood sugar levels"
    }
  ],
  "paths": {
    "/api/user/register": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "User registration",
        "operationId": "createUser",
        "description": "User registration",
        "security": [],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "name",
                  "email",
                  "password"
                ],
                "properties": {
                  "name": {
                    "description": "user name",
                    "type": "string",
                    "example": "John"
                  },
                  "email": {
                    "description": "user email",
                    "type": "string",
                    "example": "john@gmail.com"
                  },
                  "password": {
                    "description": "user password",
                    "type": "string",
                    "example": "123456789"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Creates a new user",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "stutus",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "stutus": {
                      "type": "integer",
                      "example": 201
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully registered a user!"
                    },
                    "data": {
                      "type": "object",
                      "required": [
                        "name",
                        "email",
                        "userId",
                        "accessToken",
                        "accessTokenValidUntil",
                        "_id"
                      ],
                      "properties": {
                        "name": {
                          "description": "user name",
                          "type": "string",
                          "example": "John"
                        },
                        "email": {
                          "description": "user email",
                          "type": "string",
                          "example": "john@gmail.com"
                        },
                        "userId": {
                          "description": "user id",
                          "type": "string",
                          "example": "686b9d9b1cfe706b3e50a805"
                        },
                        "accessToken": {
                          "description": "token session",
                          "type": "string",
                          "example": "5zpEsne0/Cduk6jgj1po3WJ2yfO81qIzegpvMzia"
                        },
                        "accessTokenValidUntil": {
                          "description": "token end of session",
                          "type": "string",
                          "example": "2025-09-05T15:51:48.318Z"
                        },
                        "_id": {
                          "description": "session id",
                          "type": "string",
                          "example": "68937a1493b8e555a6f3163c"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "409": {
            "description": "ConflictError",
            "content": {
              "application/json": {
                "schema": {
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 409
                    },
                    "message": {
                      "type": "string",
                      "example": "ConflictError"
                    },
                    "data": {
                      "type": "object",
                      "required": [
                        "message"
                      ],
                      "properties": {
                        "message": {
                          "type": "string",
                          "example": "Email in use"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/user/login": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "User login",
        "operationId": "addUser",
        "description": "User login",
        "security": [],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email",
                  "password"
                ],
                "properties": {
                  "email": {
                    "description": "user email",
                    "type": "string",
                    "example": "john@gmail.com"
                  },
                  "password": {
                    "description": "user password",
                    "type": "string",
                    "example": "123456789"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login to your account",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "stutus",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "stutus": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully logged in an user!"
                    },
                    "data": {
                      "type": "object",
                      "required": [
                        "name",
                        "email",
                        "accessToken",
                        "userId"
                      ],
                      "properties": {
                        "name": {
                          "description": "user name",
                          "type": "string",
                          "example": "John"
                        },
                        "email": {
                          "description": "user email",
                          "type": "string",
                          "example": "john@gmail.com"
                        },
                        "accessToken": {
                          "description": "token session",
                          "type": "string",
                          "example": "5zpEsne0/Cduk6jgj1po3WJ2yfO81qIzegpvMzia"
                        },
                        "userId": {
                          "description": "user id",
                          "type": "string",
                          "example": "686b9d9b1cfe706b3e50a805"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "NotFoundError",
            "content": {
              "application/json": {
                "schema": {
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 404
                    },
                    "message": {
                      "type": "string",
                      "example": "NotFoundError"
                    },
                    "data": {
                      "type": "object",
                      "required": [
                        "message"
                      ],
                      "properties": {
                        "message": {
                          "type": "string",
                          "example": "User not found"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/user/logout": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Logging out a user from an account",
        "operationId": "outUser",
        "description": "Logging out a user from an account",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "204": {
            "description": "The user is logged out."
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/api/user/userInformation": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "User info",
        "operationId": "infoUser",
        "description": "User info",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "User information",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "User data"
                    },
                    "data": {
                      "type": "object",
                      "required": [
                        "name",
                        "email",
                        "age",
                        "weight",
                        "height",
                        "userId"
                      ],
                      "properties": {
                        "name": {
                          "description": "User name",
                          "type": "string",
                          "example": "John"
                        },
                        "email": {
                          "description": "User email",
                          "type": "string",
                          "example": "john@gmail.com"
                        },
                        "age": {
                          "description": "User age",
                          "type": "number",
                          "example": 52
                        },
                        "weight": {
                          "description": "User weight",
                          "type": "number",
                          "example": 65
                        },
                        "height": {
                          "description": "User height",
                          "type": "number",
                          "example": 175
                        },
                        "userId": {
                          "description": "User id",
                          "type": "string",
                          "example": "6890b0ab055da8d96cf33186"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/api/user/updating": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Updating user inform",
        "operationId": "updatingUser",
        "description": "Updating user inform",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "age": {
                    "description": "User age",
                    "type": "number",
                    "example": 50
                  },
                  "weight": {
                    "description": "User weight",
                    "type": "number",
                    "example": 60
                  },
                  "height": {
                    "description": "User height",
                    "type": "number",
                    "example": 170
                  },
                  "name": {
                    "description": "User name",
                    "type": "string",
                    "example": "Wick"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User data has been updated!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "User data has been updated!"
                    },
                    "data": {
                      "type": "object",
                      "required": [
                        "userId",
                        "name",
                        "email",
                        "age",
                        "weight",
                        "height"
                      ],
                      "properties": {
                        "userId": {
                          "description": "User id",
                          "type": "string",
                          "example": "6890b0ab055da8d96cf33186"
                        },
                        "name": {
                          "description": "User name",
                          "type": "string",
                          "example": "Wick"
                        },
                        "email": {
                          "description": "User email",
                          "type": "string",
                          "example": "john@gmail.com"
                        },
                        "age": {
                          "description": "User age",
                          "type": "number",
                          "example": 50
                        },
                        "weight": {
                          "description": "User weight",
                          "type": "number",
                          "example": 60
                        },
                        "height": {
                          "description": "User height",
                          "type": "number",
                          "example": 170
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/api/measurements/add": {
      "post": {
        "tags": [
          "Measurements"
        ],
        "summary": "Adding blood sugar measurement",
        "operationId": "addMeasurements",
        "description": "Adding blood sugar measurement",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "date",
                  "time",
                  "sugarLevel",
                  "measurementTime"
                ],
                "properties": {
                  "date": {
                    "description": "Date of measurement",
                    "example": "2025-01-03",
                    "type": "string"
                  },
                  "time": {
                    "description": "Time of measurement",
                    "example": "10.00",
                    "type": "string"
                  },
                  "sugarLevel": {
                    "description": "Sugar level",
                    "example": 6,
                    "type": "number"
                  },
                  "measurementTime": {
                    "description": "Period of measurement",
                    "type": "string",
                    "enum": [
                      "натощак",
                      "после еды"
                    ]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Blood sugar level added",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 201
                    },
                    "message": {
                      "type": "string",
                      "example": "Blood sugar level added"
                    },
                    "data": {
                      "type": "object",
                      "required": [
                        "date",
                        "time",
                        "sugarLevel",
                        "measurementTime",
                        "userId",
                        "_id"
                      ],
                      "properties": {
                        "date": {
                          "description": "Date of measurement",
                          "example": "2025-01-03",
                          "type": "string"
                        },
                        "time": {
                          "description": "Time of measurement",
                          "example": "10.00",
                          "type": "string"
                        },
                        "sugarLevel": {
                          "description": "Sugar level",
                          "example": 6,
                          "type": "number"
                        },
                        "measurementTime": {
                          "description": "Period of measurement",
                          "type": "string",
                          "example": "натощак"
                        },
                        "userId": {
                          "description": "User id",
                          "example": "6890b0ab055da8d96cf33186",
                          "type": "string"
                        },
                        "_id": {
                          "description": "record id",
                          "example": "68961093238eeb5afc36bdb6",
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/api/measurements/all-dimensions": {
      "get": {
        "tags": [
          "Measurements"
        ],
        "summary": "All user measurements",
        "operationId": "allMeasurements",
        "description": "All user measurements",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "List of all sugar measurements!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "List of all sugar measurements!"
                    },
                    "data": {
                      "type": "object",
                      "required": [
                        "_id",
                        "date",
                        "time",
                        "sugarLevel",
                        "measurementTime",
                        "userId"
                      ],
                      "properties": {
                        "_id": {
                          "description": "Measurement identifier",
                          "type": "string",
                          "example": "6892141e4c72ce0623953b5e"
                        },
                        "date": {
                          "description": "Date of measurement",
                          "type": "string",
                          "example": "2025-08-05"
                        },
                        "time": {
                          "description": "Time of measurement",
                          "type": "string",
                          "example": "12.40"
                        },
                        "sugarLevel": {
                          "description": "Sugar level",
                          "type": "number",
                          "example": 5.8
                        },
                        "measurementTime": {
                          "description": "Period of measurement",
                          "type": "string",
                          "example": "после еды"
                        },
                        "userId": {
                          "description": "User id",
                          "type": "string",
                          "example": "6890b0ab055da8d96cf33186"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "responses": {
      "401": {
        "description": "UnauthorizedError",
        "content": {
          "application/json": {
            "schema": {
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 401
                },
                "message": {
                  "type": "string",
                  "example": "UnauthorizedError"
                },
                "data": {
                  "type": "object",
                  "required": [
                    "message"
                  ],
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Session not found"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}