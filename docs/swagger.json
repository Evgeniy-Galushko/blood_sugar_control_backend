{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "sugar_control",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "description": "Supporting documentation for working with the blood sugar monitoring backend."
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    },
    {
      "url": "https://blood-sugar-control-backend.onrender.com"
    }
  ],
  "tags": [
    {
      "name": "User",
      "description": "User registration"
    }
  ],
  "paths": {
    "/api/user/register": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "User registration",
        "operationId": "createUser",
        "description": "User registration",
        "security": [],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "name",
                  "email",
                  "password"
                ],
                "properties": {
                  "name": {
                    "description": "user name",
                    "type": "string",
                    "example": "John"
                  },
                  "email": {
                    "description": "user email",
                    "type": "string",
                    "example": "john@gmail.com"
                  },
                  "password": {
                    "description": "user password",
                    "type": "string",
                    "example": "123456789"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Creates a new user",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "stutus",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "stutus": {
                      "type": "integer",
                      "example": 201
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully registered a user!"
                    },
                    "data": {
                      "type": "object",
                      "required": [
                        "name",
                        "email",
                        "userId",
                        "accessToken",
                        "accessTokenValidUntil",
                        "_id"
                      ],
                      "properties": {
                        "name": {
                          "description": "user name",
                          "type": "string",
                          "example": "John"
                        },
                        "email": {
                          "description": "user email",
                          "type": "string",
                          "example": "john@gmail.com"
                        },
                        "userId": {
                          "description": "user id",
                          "type": "string",
                          "example": "686b9d9b1cfe706b3e50a805"
                        },
                        "accessToken": {
                          "description": "token session",
                          "type": "string",
                          "example": "5zpEsne0/Cduk6jgj1po3WJ2yfO81qIzegpvMzia"
                        },
                        "accessTokenValidUntil": {
                          "description": "token end of session",
                          "type": "string",
                          "example": "2025-09-05T15:51:48.318Z"
                        },
                        "_id": {
                          "description": "session id",
                          "type": "string",
                          "example": "68937a1493b8e555a6f3163c"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "409": {
            "description": "ConflictError",
            "content": {
              "application/json": {
                "schema": {
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 409
                    },
                    "message": {
                      "type": "string",
                      "example": "ConflictError"
                    },
                    "data": {
                      "type": "object",
                      "required": [
                        "message"
                      ],
                      "properties": {
                        "message": {
                          "type": "string",
                          "example": "Email in use"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}